<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/colorPrimary"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="712dp"
        android:layout_height="559dp"
        android:background="@drawable/background"
        android:alpha="0.6"

        android:layout_weight="4.25">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="@drawable/fill"
            android:id="@+id/student"
            android:layout_gravity="center"
            android:text="I am a student"
            android:textColor="@color/white"
            android:onClick="StudentSignup"

            android:layout_marginTop="12dp"
            android:layout_below="@+id/teacher"
            android:layout_alignLeft="@+id/teacher"
            android:layout_alignStart="@+id/teacher" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="@drawable/fill"
            android:id="@+id/teacher"
            android:layout_gravity="center"
            android:text="I am a teacher"
            android:textColor="@color/white"
            android:onClick="TeacherSignup"

            android:layout_marginLeft="94dp"
            android:layout_marginTop="234dp"
            android:layout_marginStart="94dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

</LinearLayout>